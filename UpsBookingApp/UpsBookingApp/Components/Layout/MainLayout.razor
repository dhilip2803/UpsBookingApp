@inherits LayoutComponentBase
@inject NavigationManager NavManager

<div class="page">

    @if (!IsLoginPage)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
         @if (!IsLoginPage)
          {
        <div class="top-row px-4">
            <a href="/" >Logout</a>
        </div>
         }
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool IsLoginPage => NavManager.Uri.EndsWith("/") || NavManager.Uri.Contains("/login");
}
